---
interface Props {
  title: string;
  description: string;
  structuredData?: any;
  showHero?: boolean;
  heroTitle?: string;
  heroDescription?: string;
}

const { 
  title, 
  description, 
  structuredData, 
  showHero = true,
  heroTitle = "Herramientas Online Gratuitas",
  heroDescription = "Colección de utilidades para texto, imágenes, códigos QR, CSS y más. Herramientas simples, rápidas y eficientes para el día a día."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="robots" content="index, follow">
  <meta name="author" content="SuiteTools">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={Astro.url}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content="/og-image.jpg">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={Astro.url}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content="/og-image.jpg">

  <!-- Canonical URL -->
  <link rel="canonical" href={Astro.url}>
  
  <!-- Preload critical assets -->
  <link rel="preconnect" href="https://unpkg.com">
  <script src="https://unpkg.com/@phosphor-icons/web" defer></script>
  
  <!-- PWA manifest -->
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#28c254">

  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(Astro.props.structuredData)}></script>
</head>
<body>
  <header class="header">
    <div class="header-container">
      <a href="/" class="logo-link">
        <img src="/logo.png" alt="Suite Tools" class="logo" />
      </a>
      <div class="header-actions">
        <!-- Aquí puedes agregar botones de acción si son necesarios -->
      </div>
    </div>
  </header>

  {showHero && (
    <section class="hero">
      <div class="hero-content">
        <div class="hero-text">
          <div class="brand-name">Suite Tools</div>
          <h1>{heroTitle}</h1>
          <p>{heroDescription}</p>
        </div>
        <div class="tool-icons">
          <i class="ph ph-text-columns"></i>
          <i class="ph ph-text-aa"></i>
          <i class="ph ph-text-strikethrough"></i>
          <i class="ph ph-sort-ascending"></i>
          <i class="ph ph-article"></i>
        </div>
      </div>
    </section>
  )}
  
  <main class="container">
    <slot />
  </main>

<style>
  .hero {
    background: white;
    padding: 6rem 1rem;
    position: relative;
    overflow: hidden;
    margin-bottom: 2rem;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .hero-logo {
    width: 80px;
    height: 80px;
    margin-bottom: 1rem;
  }

  .brand-name {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: bold;
    margin: 0;
    color: #1a1a1a;
  }

  .hero p {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 1rem auto;
    color: #666;
  }

  .tool-icons {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
    display: flex;
    gap: 2rem;
    justify-content: center;
  }

  .tool-icons i {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    font-size: 1.9rem;
    color: var(--color-primary);
    background-color: #f3faf5;
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .tool-icons i:hover {
    background-image: linear-gradient(to right, var(--card-gradient-bg), #fff);
    border: 3px solid var(--color-primary-hover);
  }
    z-index: 1;
  }

  .hero-text {
    max-width: 700px;
    text-align: center;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--color-text) 0%, var(--color-primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--color-text);
    line-height: 1.6;
    margin-bottom: 2rem;
    opacity: 0.9;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  .hero-shape {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 70% 50%, var(--color-primary) 0%, transparent 70%);
    opacity: 0.1;
    transform: translateX(30%);
    animation: fadeIn 1s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 0.1;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 1rem;
    }

    .hero h1 {
      font-size: 2.25rem;
    }

    .hero p {
      font-size: 1.1rem;
    }
  }
</style>

  <footer class="footer">
    <div class="container footer-content">
      <div class="footer-section">
        <a href="/" class="footer-logo">
          <img src="/logo.png" alt="Suite Tools" class="logo" />
        </a>
        <p class="footer-description">
          Herramientas gratuitas de manipulación de texto diseñadas para simplificar tu trabajo diario. Rápidas, seguras y fáciles de usar.
        </p>
      </div>

      <div class="footer-section">
        <h3 class="footer-title">Herramientas</h3>
        <ul class="footer-services">
          <li><a href="/contador-de-palabras">Contador de Palabras</a></li>
          <li><a href="/convertidor-mayusculas">Convertidor de Mayúsculas</a></li>
          <li><a href="/eliminar-duplicados">Eliminar Duplicados</a></li>
          <li><a href="/ordenar-lineas">Ordenar Líneas</a></li>
          <li><a href="/limpiador-de-texto">Limpiador de Textos</a></li>
          <li><a href="/reemplazar-texto">Reemplazar Texto</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <div class="container">
        <p class="copyright">&copy; {new Date().getFullYear()} SuiteTools - Todos los derechos reservados</p>
      </div>
    </div>
  </footer>
</body>
</html>
