---
interface Props {
  title: string;
  description: string;
  iconName: string;
  href: string;
}

const { title, description, iconName, href } = Astro.props;
---

<a href={href} class="tool-card">
  <div class="icon">
    <i class={iconName}></i>
  </div>
  <h3>{title}</h3>
  <p>{description}</p>
</a>

<style>
  .tool-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 28px 14px;
    background: #FFF;
    box-shadow: 0 4px 6px 0 rgba(205, 209, 224, 0.5);
    border-radius: 0.75rem;
    text-decoration: none;
    border: 3px solid transparent;
    color: var(--color-text);
    transition: all 0.3s ease;
    height: 100%;
    justify-content: center;
  }

  .tool-card:hover {
    background-image: linear-gradient(to right, var(--card-gradient-bg), #fff);
    transition: 0.2s;
    border-color: var(--color-primary-hover);
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    margin-bottom: 1rem;
    background-color: #f3faf5;
    border-radius: 50%;
  }

  .icon i {
    font-size: 1.9rem;
    color: var(--color-primary);
    font-weight: 400;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  p {
    font-size: 0.875rem;
    text-align: center;
    color: #666;
  }
</style>
