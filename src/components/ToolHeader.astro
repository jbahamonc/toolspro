---
interface Props {
  title: string;
  description: string;
  iconName: string;
}

const { title, description, iconName } = Astro.props;
---

<div class="tool-header-wrapper">
  <div class="tool-header-icon">
    <i class={iconName}></i>
  </div>
  <h1>{title}</h1>
  <p class="tool-description">{description}</p>
</div>

<style>
.tool-header-wrapper {
  text-align: center;
  padding: 3rem 1rem;
  margin: -2rem -2rem 2rem -2rem;
  background: linear-gradient(to bottom, var(--card-gradient-bg) 0%, rgba(255,255,255,0) 100%);
  border-radius: 8px 8px 0 0;
}

.tool-header-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 64px;
  height: 64px;
  border-radius: 50%;
  background-color: var(--card-gradient-bg);
  margin-bottom: 1.5rem;
}

.tool-header-icon i {
  font-size: 32px;
  color: var(--color-primary);
}

h1 {
  color: var(--color-text);
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  font-family: var(--font-headings);
}

.tool-description {
  color: #666;
  font-size: 1.125rem;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}
