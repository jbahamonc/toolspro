---
import Layout from '../layouts/Layout.astro';
import ToolCard from '../components/ToolCard.astro';
import FAQSection from '../components/FAQSection.astro';
import '../styles/global.css';

const title = "SuiteTools - Herramientas gratuitas para manipular texto";
const description = "Colección de herramientas gratuitas y fáciles de usar para manipular texto: contador de palabras, convertidor de mayúsculas, eliminador de duplicados y más.";

// Structured data for rich results
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "SuiteTools",
  "description": description,
  "applicationCategory": "UtilitiesApplication",
  "operatingSystem": "Web",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  }
};

const tools = [
  {
    title: 'Contador de Palabras',
    description: 'Cuenta palabras y caracteres al instante',
    iconName: 'ph ph-calculator',
    href: '/contador-de-palabras'
  },
  {
    title: 'Convertidor de Mayúsculas',
    description: 'Convierte texto entre mayúsculas y minúsculas',
    iconName: 'ph ph-text-aa',
    href: '/convertidor-mayusculas'
  },
  {
    title: 'Eliminar Duplicados',
    description: 'Elimina líneas duplicadas en tu texto',
    iconName: 'ph ph-copy',
    href: '/eliminar-duplicados'
  },
  {
    title: 'Ordenar Líneas',
    description: 'Ordena líneas alfabéticamente',
    iconName: 'ph ph-sort-ascending',
    href: '/ordenar-lineas'
  },
  {
    title: 'Limpiador de Textos',
    description: 'Elimina espacios, saltos de línea y mucho mas',
    iconName: 'ph ph-broom',
    href: '/limpiador-de-texto'
  },
  {
    title: 'Reemplazar Texto',
    description: 'Busca y reemplaza texto fácilmente',
    iconName: 'ph ph-arrows-left-right',
    href: '/reemplazar-texto'
  },
  {
    title: 'Lorem Ipsum',
    description: 'Genera texto de relleno Lorem Ipsum',
    iconName: 'ph ph-text-columns',
    href: '/generador-lorem-ipsum'
  },
  // {
  //   title: 'Invertir Texto',
  //   description: 'Invierte el orden de los caracteres',
  //   iconName: 'ph ph-arrows-counter-clockwise',
  //   href: '/invertir-texto'
  // }
];

const faqs = [
  {
    question: '¿Cómo funciona SuiteTools?',
    answer: 'SuiteTools es una colección de herramientas gratuitas para manipular texto. Simplemente selecciona la herramienta que necesitas, pega tu texto y obtén el resultado al instante.'
  },
  {
    question: '¿Es seguro usar SuiteTools?',
    answer: 'Sí, es completamente seguro. Todo el procesamiento se realiza en tu navegador y nunca almacenamos tu texto. Tu privacidad es nuestra prioridad.'
  },
  {
    question: '¿Puedo usar SuiteTools en mi móvil?',
    answer: 'Sí, todas nuestras herramientas son totalmente responsivas y funcionan perfectamente en dispositivos móviles.'
  }
];


---

<Layout 
  title={title} 
  description={description} 
  showHero={true}
>
    <section class="tools-section">
      <h2>Herramientas de <span class="highlight">Texto</span></h2>
      <div class="tools-grid">
        {tools.map(tool => (
          <ToolCard
            title={tool.title}
            description={tool.description}
            iconName={tool.iconName}
            href={tool.href}
          />
        ))}
      </div>
    </section>

    <FAQSection faqs={faqs} />
  </main>
</Layout>
